---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        font-family: Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: #FBFAF6;
        color: #222;
      }

      .hero {
        text-align: center;
        padding: 5rem 1rem 3rem 1rem;
        border-bottom: 1px solid #ddd;
      }

      .logo {
        max-width: 180px;
        height: auto;
        margin-bottom: 1rem;
      }

      .headline {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 auto 1rem auto;
        max-width: 800px;
        line-height: 1.2;
      }

      .subheadline {
        font-size: 1.2rem;
        color: #444;
        max-width: 600px;
        margin: 1rem auto 0 auto;
        line-height: 1.6;
      }

      main {
        padding: 3rem 1rem;
        max-width: 800px;
        margin: 0 auto;
      }
    </style>
  </head>

  <body>
    <Header />
    <section class="hero">
      <img src="/logo.png" alt="The Dash Marmot logo" class="logo" />
      <h1 class="headline">Unblinking. Underground. Occasionally Correct.</h1>
      <p class="subheadline">
        The Dash Marmot delivers real analysis, bold commentary, and occasional sarcasm. Often all at once.
      </p>
    </section>

    <main>
      <!-- Here we’ll eventually list articles -->
      <p><em>Welcome to <strong>the-marmot.com</strong>. News with a marmot’s eye view.</em></p>
    </main>

    <Footer />
  </body>
</html>