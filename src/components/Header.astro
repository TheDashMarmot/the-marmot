---
import HeaderLink from './HeaderLink.astro';
---
<header>
	<nav>
		<h2 class="brand">
			<a href="/">
				<span class="site-title">The Dash Marmot</span>
			</a>
		</h2>
		<details class="menu">
			<summary class="burger" aria-label="Toggle menu">
				<span class="line"></span>
				<span class="line"></span>
				<span class="line"></span>
			</summary>
			<nav class="nav-links" aria-expanded="false">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</nav>
		</details>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		min-height: 3rem;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}

  .brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Libre Baskerville', serif;
    font-size: 1.2rem;
  }

  .logo {
    max-width: 80px;
    height: auto;
    display: block;
    margin: 0 auto 1rem auto;
    filter: grayscale(100%) contrast(120%);
  }

  .site-title {
    font-size: 1.2rem;
    vertical-align: middle;
  }

.menu {
  position: relative;
  margin-left: auto;
}

/* Hamburger icon */
.burger {
  display: inline-flex;
  flex-direction: column;
  gap: 4px;
  cursor: pointer;
  background: none;
  border: none;
  padding: 0.5em;
}
.burger .line {
  width: 24px;
  height: 2px;
  background: #222;
}

/* Hide default summary marker */
.menu summary::-webkit-details-marker,
.menu summary::marker {
  display: none;
}

/* Navigation hidden by default */
.nav-links {
  display: none;
  flex-direction: column;
  position: absolute;
  top: 100%;
  right: 0;
  background: #FBFAF6;
  padding: 1rem;
  gap: 1rem;
  box-shadow: 0 2px 6px rgba(0,0,0,0.15);
  z-index: 10;
}

/* Show when <details> is open */
.menu[open] .nav-links {
  display: flex;
}

/* On desktop: hide burger, always show nav-links inline */
@media (min-width: 721px) {
  .burger {
    display: none;
  }
  .nav-links {
    display: flex !important;
    position: static;
    flex-direction: row;
    gap: 1rem;
    background: none;
    padding: 0;
    box-shadow: none;
  }
}
</style>
<script client:load>
  const burger = document.querySelector('.hamburger');
  const nav = document.querySelector('.nav-links');
  burger.addEventListener('click', () => {
    const expanded = nav.getAttribute('aria-expanded') === 'true';
    nav.setAttribute('aria-expanded', String(!expanded));
    nav.classList.toggle('expanded');
  });
</script>
